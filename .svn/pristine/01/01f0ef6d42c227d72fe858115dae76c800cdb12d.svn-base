<%@taglib uri="http://struts.apache.org/tags-bean" prefix="bean" %>
<%@taglib uri="http://struts.apache.org/tags-html" prefix="html" %>
<%@taglib uri="http://struts.apache.org/tags-logic" prefix="logic" %>
<%
    HttpSession sesion = request.getSession();
    String id_periodo = "", id_user="";
    if (sesion.getAttribute("usuario") == null) {
%>
<jsp:forward page="/login.msut">
    <jsp:param name="error" value="true"></jsp:param>
    <jsp:param name="ask" value="false"></jsp:param>
    <jsp:param name="errorMessage" value="Sesi&oacute;n caducada o inv&aacute;lida<br/>El recurso al que deseas acceder est&aacute; restringido, debes iniciar sesi&oacute;n para utilizarlo."></jsp:param>
</jsp:forward>
<%  } else {
        id_periodo = sesion.getAttribute("idPeriodo").toString();
        id_user = sesion.getAttribute("idUsuario").toString();
    }
%>

<html:form action="/CgutCertificacionesAction" onsubmit="return false">
    <table align="center" border="0px" width="900">
        <tr>
            <td colspan="4">
                <h2>Certificaciones:</h2>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <label>Certificaci&oacute;n:</label>
            </td>
            <td colspan="2">
                <span id="cboCertificacion">
                    <html:select styleId="cboCertificacion" onchange="retrieveURL('/CgutCertificacionesAction.msut?ask=buscaCertificacion','CgutCertificacionesForm');" 
                                 property="cboCertificacion" style="width:auto;" >
                        <html:option value="-1">Ingresar nueva Certificacion...</html:option>
                        <html:optionsCollection name="CgutCertificacionesForm" property="certificaciones" label="name" value="id"></html:optionsCollection>
                    </html:select>
                </span>
            </td>
        </tr>
        <tr>
            <td colspan="4"><h2>Especificaciones:</h2></td>
        </tr>
        <tr>
            <td colspan="2" align="right"><label>Nuevo nombre de la Certificacion:</label></td>
            <td colspan="2">
                <span id="nombreCertificacion">
                    <html:text maxlength="50" styleId="nombreCertificacion" property="nombreCertificacion" style="width:400px;"/>
                </span>
            </td>
        </tr>
        <tr>
            <td colspan="4" align="center"> <!--Botón ac tivar / desactivar-->
                <span id="certificacionact">
                    <logic:notEqual name="CgutCertificacionesForm" property="certificacionActiva" value="">
                        <a class="green" onclick="bajaCertificacion();">
                            <i><strong><bean:write name="CgutCertificacionesForm" property="certificacionActiva"></bean:write></strong></i>
                            </a>
                    </logic:notEqual>
                </span>
            </td>
        </tr>
        <tr>
            <td colspan="4" align="right">
                <a class="green" onclick="retrieveURL('/CgutCertificacionesAction.msut?ask=nuevaCertificacion','CgutCertificacionesForm');">Nuevo registro</a>
                <a class="green" onclick="validarFormularioCertificacion();">Guardar cambios</a>
            </td>
        </tr>
    </table>

</html:form>
